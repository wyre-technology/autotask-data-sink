# Autotask API credentials
# Required for authentication with the Autotask API
AUTOTASK_USERNAME=your-username
AUTOTASK_SECRET=your-api-key
AUTOTASK_INTEGRATION_CODE=your-integration-code

# PostgreSQL connection (optional, defaults will be used if not set)
# These will be used by both the application and the PostgreSQL driver
PGHOST=localhost
PGPORT=5432
PGDATABASE=autotask_data
PGUSER=postgres
PGPASSWORD=your-password
PGSSLMODE=disable

# Sync frequencies in minutes (optional, defaults will be used if not set)
AUTOTASK_SINK_SYNC_TICKETS=15
AUTOTASK_SINK_SYNC_TIME_ENTRIES=15
AUTOTASK_SINK_SYNC_COMPANIES=1440
AUTOTASK_SINK_SYNC_CONTACTS=1440
AUTOTASK_SINK_SYNC_RESOURCES=1440
AUTOTASK_SINK_SYNC_CONTRACTS=1440

# Logging configuration (optional)
AUTOTASK_SINK_LOG_LEVEL=info  # debug, info, warn, error
AUTOTASK_SINK_LOG_FORMAT=json # json, console